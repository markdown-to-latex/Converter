{
    "name": "@md-to-latex/converter",
    "version": "2.0.0-beta.14",
    "description": "Yet Another eXtended Markdown -- markup language",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "npm run convert-schema",
        "build": "tsc --build --pretty",
        "watch": "tsc --build --watch --pretty",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "test": "jest test",
        "convert-schema": "node utils/convert-schema.js && prettier --write src/config/types.ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/markdown-to-latex/converter"
    },
    "keywords": [
        "yaxm",
        "markdown",
        "converter",
        "transpiler",
        "report"
    ],
    "files": [
        "dist/**",
        "*.schema.json"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/js-yaml": "^4.0.9",
        "@types/json5": "^2.2.0",
        "@types/node": "^20.11.30",
        "jest": "^29.7.0",
        "jest-expect-message": "^1.1.3",
        "json-schema-to-typescript": "^13.1.2",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "json5": "^2.2.3",
        "jsonschema": "^1.4.1"
    }
}
