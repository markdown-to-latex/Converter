{
    "name": "@md-to-latex/converter",
    "version": "2.0.0-beta.2",
    "description": "MarkDown To LaTeX Converter",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "npm run convert-schema",
        "build": "tsc --build --pretty",
        "watch": "tsc --build --watch --pretty",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "test": "jest test",
        "convert-schema": "node utils/convert-schema.js && prettier --write src/config/types.ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/markdown-to-latex/converter"
    },
    "keywords": [
        "markdown",
        "latex",
        "converter",
        "transpiler",
        "report"
    ],
    "bin": {
        "md-to-latex": "./dist/cli.js"
    },
    "files": [
        "dist/**",
        "*.schema.json"
    ],
    "author": "Anatolii Titov <a@toliak.ru>",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/js-yaml": "^4.0.2",
        "@types/json5": "^2.2.0",
        "@types/node": "^18.0.0",
        "jest": "^27.0.6",
        "json-schema-to-typescript": "^11.0.0",
        "prettier": "^2.4.0",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "js-yaml": "^4.1.0",
        "json5": "^2.2.0",
        "jsonschema": "^1.4.0"
    }
}
