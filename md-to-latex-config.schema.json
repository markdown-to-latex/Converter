{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "MarkDown To LaTeX Config",
    "description": "MarkDOwn To LaTeX Configuration Schema",
    "type": "object",
    "properties": {
        "defaultFontSize": {
            "type": "number",
            "description": "Default font size",
            "default": 14,
            "minimum": 1
