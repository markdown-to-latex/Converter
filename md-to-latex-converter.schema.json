{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "MarkDown To LaTeX Converter",
    "description": "MarkDOwn To LaTeX Converter Configuration Schema",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "latex": {
            "$ref": "#/definitions/LatexInfo"
        },
        "opCode": {
            "$ref": "#/definitions/OpCodeData"
        },
        "files": {
            "type": "array",
            "description": "Files to process",
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/FileInfo"
            }
        }
    },
    "required": ["files"],
    "additionalProperties": false,
    "definitions": {
        "LatexInfo": {
            "type": "object",
            "description": "Information about LaTeX",
            "properties": {
                "useMonospaceFont": {
                    "type": "boolean",
                    "description": "Use \\texttt for code-spans",
                    "default": true
                },
                "defaultAutoEscapes": {
                    "type": "boolean",
                    "description": "Auto-escape default characters (%, #, $, _)",
                    "default": true
                },
                "extendAutoEscapes": {
                    "type": "array",
                    "description": "Words to escape",
                    "items": {
                        "$ref": "#/definitions/LatexEscapeData"
                    },
                    "default": []
                },
                "useLinkAs": {
                    "type": "string",
                    "description": "Auto-escape underscores in an inlined code block",
                    "enum": ["code", "default", "bold", "underline", "italic"],
                    "default": "default"
                },
                "margin": {
                    "$ref": "#/definitions/LatexMarginInfo"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "LatexEscapeData": {
            "type": "object",
            "description": "Word (that must be escaped) data",
            "properties": {
                "chars": {
                    "type": "array",
                    "description": "List of words to escape. Replacing is being done case insensitively",
                    "items": {
                        "type": "string",
                        "description": "Word to escape. Replacing is being done case insensitively",
                        "minLength": 1
                    },
                    "minItems": 1
                },
                "replacer": {
                    "type": "string",
                    "description": "Replacer RegExp string",
                    "examples": ["\\$1", "\\something{$1}"],
                    "default": "\\$1"
                },
                "inText": {
                    "type": "boolean",
                    "description": "Escape words in plain text",
                    "default": true
                },
                "inCodeSpan": {
                    "type": "boolean",
                    "description": "Escape words in code span",
                    "default": true
                },
                "inLink": {
                    "type": "boolean",
                    "description": "Escape words inside a link",
                    "default": true
                }
            },
            "additionalProperties": false,
            "required": ["chars"]
        },
        "LatexMarginInfo": {
            "type": "object",
            "description": "Information about LaTeX margins",
            "properties": {
                "imageInnerTextSep": {
                    "type": "string",
                    "description": "Figure: Inner Text Separator",
                    "default": "3em"
                },
                "imageBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Below Caption Skip",
                    "default": "-4ex"
                },
                "imageRemovedBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Removed Below Caption Skip",
                    "default": "-1.6em"
                },
                "imageAboveCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Above Caption Skip",
                    "default": "-0.5em"
                },
                "codeInnerTextSep": {
                    "type": "string",
                    "description": "Figure: Inner Text Separator",
                    "default": "3em"
                },
                "codeBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Below Caption Skip",
                    "default": "-4ex"
                },
                "codeRemovedBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Removed Below Caption Skip",
                    "default": "-1.6em"
                },
                "codeAboveCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Above Caption Skip",
                    "default": "-0.5em"
                },
                "tableBelowCaptionSkip": {
                    "type": "string",
                    "description": "LongTable: Below Caption Skip",
                    "default": "0em"
                },
                "tableAboveCaptionSkip": {
                    "type": "string",
                    "description": "LongTable: Above Caption Skip",
                    "default": "0em"
                },
                "tablePre": {
                    "type": "string",
                    "description": "LongTable: Pre",
                    "default": "2em"
                },
                "tablePost": {
                    "type": "string",
                    "description": "LongTable: Post",
                    "default": "2em"
                },
                "tableRemovedPost": {
                    "type": "string",
                    "description": "LongTable: Removed Post Space",
                    "default": "0em"
                },
                "mathAboveDisplaySkip": {
                    "type": "string",
                    "description": "Code: Above Display Skip",
                    "default": "-0.9em"
                },
                "mathBelowDisplaySkip": {
                    "type": "string",
                    "description": "Code: Below Display Skip",
                    "default": "0pt"
                },
                "mathAboveDisplayShortSkip": {
                    "type": "string",
                    "description": "Code: Above Display Short Skip",
                    "default": "0pt"
                },
                "mathBelowDisplayShortSkip": {
                    "type": "string",
                    "description": "Code: Below Display Short Skip",
                    "default": "0pt"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "OpCodeData": {
            "type": "object",
            "description": "OpCode properties",
            "properties": {
                "starter": {
                    "type": "string",
                    "description": "Start word for OpCode",
                    "default": "!",
                    "minLength": 1
                },
                "delimiter": {
                    "type": "string",
                    "description": "Start word for OpCode",
                    "default": "!",
                    "minLength": 1
                }
            }
        },
        "FileInfo": {
            "type": "object",
            "description": "File information",
            "properties": {
                "path": {
                    "type": "string",
                    "description": "Path to the file",
                    "minLength": 1
                },
                "out": {
                    "type": "string",
                    "description": "Output file path",
                    "minLength": 1
                }
            },
            "required": ["path", "out"],
            "additionalProperties": false
        }
    }
}
